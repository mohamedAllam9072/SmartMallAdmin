<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/icon_image_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="2dp"
            android:onClick="imageView_click"
            android:src="@drawable/ic_insert_photo_black_24dp" />


        <EditText
            android:id="@+id/name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="name"
            android:padding="16dp"
            android:textColorHint="@color/colorAccent" />

        <EditText
            android:id="@+id/phone_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="phone"
            android:padding="16dp"
            android:textColorHint="@color/colorAccent" />

        <EditText
            android:id="@+id/email_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="email"
            android:padding="16dp"
            android:textColorHint="@color/colorAccent" />

        <EditText
            android:id="@+id/website_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="website"
            android:padding="16dp"
            android:textColorHint="@color/colorAccent" />

        <EditText
            android:id="@+id/description_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="description"
            android:padding="16dp"
            android:textColorHint="@color/colorAccent" />

        <EditText
            android:id="@+id/category_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="category"
            android:padding="16dp"
            android:textColorHint="@color/colorAccent" />

        <EditText
            android:id="@+id/beacon_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="beacon_id"
            android:padding="16dp"
            android:textColorHint="@color/colorAccent" />

        <EditText
            android:id="@+id/map_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="map_id"
            android:padding="16dp"
            android:textColorHint="@color/colorAccent" />

        <ImageView
            android:id="@+id/image_view_gallary_1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:onClick="gallery1_click"

            android:src="@drawable/ic_insert_photo_black_24dp" />

        <ImageView
            android:id="@+id/image_view_gallary_2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:onClick="gallery2_click"
            android:src="@drawable/ic_insert_photo_black_24dp" />

        <ImageView
            android:id="@+id/image_view_gallary_3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:onClick="gallery3_click"
            android:src="@drawable/ic_insert_photo_black_24dp" />

        <ImageView
            android:id="@+id/image_view_gallary_4"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:onClick="gallery4_click"
            android:src="@drawable/ic_insert_photo_black_24dp" />

        <ImageView
            android:id="@+id/image_view_gallary_5"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:onClick="gallery5_click"
            android:src="@drawable/ic_insert_photo_black_24dp" />


        <Button
            android:id="@+id/uploud_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="upload"
            android:textAllCaps="true"
            android:textSize="@dimen/fab_margin" />

        <Button
            android:id="@+id/act2_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="new item"
            android:textAllCaps="true"
            android:textSize="@dimen/fab_margin" />

    </LinearLayout>

</ScrollView>
